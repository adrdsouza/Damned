doctype html
html
  head
    style
      include style.css
  body
    .container
      .header
        img.logo(src=`https://damneddesigns.com/Logo.svg` alt="Damned Designs")
        h1 Your Order Has Been Cancelled
      .content
        p Hello #{data.email},
        p Your order from Damned Designs has been cancelled as requested.
        
        h2 Order Details:
        p 
          strong Order Number: 
          span #{data.display_id}
        p
          strong Cancellation Date: 
          span #{new Date().toLocaleDateString()}
        
        table.order-items
          thead
            tr
              th Item
              th Quantity
              th Price
          tbody
            each item in data.items
              tr
                td.item-name #{item.product_title || item.title}
                td.item-qty #{item.quantity}
                td.item-price $#{(item.unit_price / 100).toFixed(2)}
        
        .order-summary
          p
            strong Subtotal: 
            span $#{(data.subtotal / 100).toFixed(2)}
          p
            strong Total Cancelled: 
            span $#{(data.total / 100).toFixed(2)}
        
        if data.canceled_at
          .cancellation-info
            p Your order was cancelled on #{new Date(data.canceled_at).toLocaleDateString()} at #{new Date(data.canceled_at).toLocaleTimeString()}.
        
        if data.payment_status === "refunded"
          .refund-info
            p A refund has been initiated for this order. Please allow 5-7 business days for the refund to be processed by your bank.
            
      .footer
        p If you have any questions about your cancelled order, please contact our customer service team at support@damneddesigns.com.
        p Thank you for your interest in Damned Designs!